<h1 id="title">EAT DA BURGER!</h1>


<h2 id="orderBurger">Burger ordered.</h2>
<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2 id="ateBurger">Burgers you ATE</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2 id="addBurger">Order a burger.</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="bugerType" name="name">
  </div>


  <button type="submit">DEVOUR</button>
</form>
